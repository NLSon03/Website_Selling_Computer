                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link text-white active" aria-current="page" href="/Home/Index">Trang chủ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white active" href="/Home/AllProduct">Tất cả sản phẩm</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white active" href="#" role="button" data-bs-toggle="dropdown"
                                           aria-expanded="false">
                                            Laptop
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/1">DELL</a></li>
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/6">MSI</a></li>
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/5">ASUS</a></li>
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/4">ACER</a></li>
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/3">LENOVO</a></li>
                                            <li><a class="dropdown-item active" href="/Home/ViewProductWithManufacturer/2">HP</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <section class="mymaincontent">
