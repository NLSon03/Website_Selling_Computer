@using Microsoft.AspNetCore.Identity
@using Website_Selling_Computer.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    var user = UserManager.GetUserAsync(User);
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STM Store - Trang chủ</title>
    <link type="image/x-icon" href="~/image/logoSTM-01.png" rel="shortcut icon">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body id="page_index" style="background-color: #F3F8FF;">
    <!-- Header -->
    <section class="myheader">
        <!--wraptop-->
        <div class="wraptop">
            <div class="p-2 mb-0 text-light" style="background-color: #318845;">
                <div class="container py-3 px-3">
                    <div class="row py-2">
                        <!--logo-->
                        <div class="col-md-2 py-1">
                            <a href="/Home/Index">
                                <img src="~/image/logoSTM-01.png" class="img-fluid" alt="logoSTM" width="200" height="auto">
                            </a>
                        </div>
                        <!--Seach-->
                        <div class="col-md-4 pt-2">
                            <form action="/Home/Search" method="get">
                                <div class="input-group mb-3">
                                    <input type="text" name="product" class="form-control" placeholder="Từ khóa tìm kiếm"
                                           aria-label="Từ khóa tìm kiếm" aria-describedby="basic-addon2">
                                    <span class="input-group-text" id="basic-addon2"><i class="fa-solid fa-magnifying-glass"></i></span>
                                </div>
                            </form>
                        </div>
                        <!-- hotline -->
                        <div class="col-md-2 pt-1">
                            <div class="row">
                                <div class="col-3">
                                    <div class="fs-2">
                                        <i class="fa-solid fa-phone"></i>
                                    </div>
                                </div>
                                <div class="col-9">
                                    Hotline <strong class="#">0931967576</strong>
                                </div>
                            </div>
                        </div>
                        <!-- dang nhap -->
                        <!-- dang ki -->
                        
                        <div class="col-md-4">
                            
                            <div class="row">
                                @if (!SignInManager.IsSignedIn(User) && user != null)
                                {
                                <div class="col-4 py-lg-2">
                                    <div class="row">
                                            <a asp-area="Identity" asp-page="/Account/Register" class="text-decoration-none text-light" style="text-align:right;">Đăng ký</a>
                                    </div>
                                </div>
                                <div class="col-4 py-lg-2">
                                    <div class="row">
                                        <a href="/Identity/Account/Login" class="text-decoration-none text-light" style="text-align: right;">Đăng nhập</a>
                                    </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-4 py-lg-2">
                                        <div class="row">
                                            <a asp-area="Identity" asp-page="/Account/Logout" class="text-decoration-none text-light" style="text-align:right;">Đăng xuất</a>
                                        </div>
                                    </div>
                                    <div class="col-4 py-lg-2">
                                        <div class="row">
                                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-decoration-none text-light" style="text-align: right;">Quản lí tài khoản</a>
                                        </div>
                                    </div>
                                }
                                <div class="col-1 py-1">
                                    @if (!SignInManager.IsSignedIn(User) && user != null)
                                    {
                                        <a href="/Identity/Account/Login" class="text-decoration-none text-light">
                                            <span class="fs-3">
                                                <i class="fa-solid fa-user"></i>
                                            </span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-decoration-none text-light">
                                            <span class="fs-3">
                                                <i class="fa-solid fa-user"></i>
                                            </span>
                                        </a>
                                    }

                                </div>
                                <!--Cart-->
                                <div class="col-1 py-1">
                                    <a href="/Cart/Index" class="position-relative">
                                        <span class="fs-3">
                                            <i class="fa-solid fa-cart-plus text-light"></i>
                                        </span>
                                        @* <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill text-bg-danger">
                                            0<span class="visually-hidden">unread messages</span>
                                        </span> *@
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- menu -->
    <section class="mymenu" style="background-color: #006837;">
        <div class="container">
            <div class="row">
                <div class="col-3 py-3">
