@model Website_Selling_Computer.Models.Manufacturer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Delete"; Layout = "_Layout";
}

<h1>Xóa NSX</h1>

<h3>Bạn có muốn xóa thông tin NSX?</h3>
<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Tên NSX</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>
        <dt class = "col-sm-2">
            <p>Thông tin liên lạc</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactInfo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ManufacturerID" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về danh sách</a>
    </form>
</div>
