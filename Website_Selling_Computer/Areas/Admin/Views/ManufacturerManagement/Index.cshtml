@model IEnumerable<Website_Selling_Computer.Models.Manufacturer>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Index"; Layout = "_Layout";
}

<h1>Nhà sản xuất</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Tên nhà sản xuất</p>
            </th>
            <th>
                <p>Thông tin liên lạc</p>
            </th>
            <th>
                <p>Ảnh NSX</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerName)
            </td>
            <td>
                <a href="@item.ContactInfo">@item.ContactInfo</a>
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelitem=> item.ManufacturerImage)" width="69px" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManufacturerID">Chỉnh sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.ManufacturerID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
