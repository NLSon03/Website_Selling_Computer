@model Website_Selling_Computer.Models.OrderDetail
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using Website_Selling_Computer.DataAccess
@using Microsoft.AspNetCore.Identity
@using Website_Selling_Computer.Models
@{
    ViewData["Title"] = "Details"; Layout = "_Layout";
}
<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product != null && Model.ProductID != null)
            {
                <!--     @Html.DisplayFor(model => model.Product.ProductName)-->
                @if (Model.Product.ProductID == Model.ProductID)
                {
                    @Model.Product.ProductName
                    <br />
                    <img src="@Model.Product.MainImageUrl" width="250px"/>
                }
                else
                {
                    <span class="text-danger">""</span>
                }
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> 
</div>
