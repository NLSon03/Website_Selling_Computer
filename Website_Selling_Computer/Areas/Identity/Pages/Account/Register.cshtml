@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .cascading-right {
        margin-right: -50px;
    }
</style>
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Đăng kí ngay</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div data-mdb-input-init class="form-outline">
                    <input  asp-for="Input.FirstName" class="form-control" />
                    <label class="form-label" for="form3Example1">Họ</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div data-mdb-input-init class="form-outline">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label class="form-label" for="form3Example2">Tên</label>
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Input.Email"  class="form-control" />
                <label class="form-label" for="form3Example3">Địa chỉ Email</label>
              </div>

              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Input.PhoneNumber"   class="form-control" />
                <label class="form-label" for="form3Example4">Điện thoại</label>
              </div>
              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Input.Address"  class="form-control" />
                <label class="form-label" for="form3Example4">Địa chỉ</label>
              </div>
              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Input.Password" type="password" class="form-control" />
                <label class="form-label" for="form3Example4">Mật khẩu</label>
              </div>
              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <input asp-for="Input.ConfirmPassword" type="password"  class="form-control" />
                <label class="form-label" for="form3Example4">Nhập lại mật khẩu</label>
              </div>
                
              <!--CHỌN ROLE---------------------------------------------------------------->
              <div class="form-check d-flex justify-content-center mb-4">
               <select asp-for="Input.Roles" asp-items="@Model.Input.RoleList" class="form-control">
                    <option disabled selected>-Chọn Role-</option>
                </select>
              </div>

              <!-- Submit button -->
              <button id="registerSubmit" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">
                Đăng kí
              </button>

              <!-- Register buttons -->
              <div class="text-center">
                <p>or sign up with:</p>
                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-google"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-twitter"></i>
                </button>

                <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-github"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



